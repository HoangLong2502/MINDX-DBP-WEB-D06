mixin item(nameItem, src, price)
  .item 
    img(src=src).imgSrc
    h1(class="item_name")= nameItem
    h2(class="item_price")= price
    form
      .form-group 
        label(for="Size") Size 
        select.form-control(name="size")
          option(value="tall") Tall
          option(value="grander") Grander
          option(value="venti") Venti 
      .form-group 
        label(for="ice") Ice 
        select.form-control(name="ice")
          option(value="100%") 100%
          option(value="75%") 75%
          option(value="50%") 50%
      .form-group 
        label(for="Suger") Suger  
        select.form-control(name="suger")
          option(value="100%") 100%
          option(value="75%") 75%
          option(value="50%") 50%
      button.btn.btn-block.btn-success(type="click") ADD TO BASKET


